---
interface Props {
	photoCount: number;
	collectionCount: number;
	camera: string;
}

const { photoCount, collectionCount, camera } = Astro.props;
---

<section class="stats">
  <div class="stats-container">
    <div class="stat-item">
      <span class="stat-number">{photoCount}</span>
      <span class="stat-label">Photographs</span>
    </div>
    <div class="stat-divider"></div>
    <div class="stat-item">
      <span class="stat-number">{collectionCount}</span>
      <span class="stat-label">Collections</span>
    </div>
    <div class="stat-divider"></div>
    <div class="stat-item">
      <span class="stat-label-alt">{camera}</span>
    </div>
  </div>
</section>

<style>
  .stats {
    background: var(--color-bg-card);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
    padding: 2.5rem 0;
    margin: 3rem 0;
  }

  .stats-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-primary);
    font-family: var(--font-mono);
  }

  .stat-label {
    font-size: 0.65rem;
    font-family: var(--font-mono);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    opacity: 0.6;
  }

  .stat-label-alt {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    letter-spacing: 0.05em;
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  @media (max-width: 768px) {
    .stats-container {
      gap: 2rem;
      padding: 0 1rem;
    }

    .stat-number {
      font-size: 1.75rem;
    }
  }
</style>
