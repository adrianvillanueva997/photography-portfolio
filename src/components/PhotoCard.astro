---
import Lightbox from "./Lightbox.astro";

interface Props {
	id: string;
	title: string;
	image: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

const { id, title, image, metadata } = Astro.props;
---

<div class="photo-card">
  <div class="photo-wrapper" data-lightbox-trigger={id} role="button" tabindex="0" aria-label={`View ${title} in fullscreen`}>
    <div class="photo-inner">
      <img src={image} alt={title} loading="lazy" />
      <div class="overlay">
        <div class="overlay-top">
          <span class="film-code">{metadata.settings.aperture}</span>
          <span class="film-code">ISO {metadata.settings.iso}</span>
        </div>
        <div class="overlay-bottom">
          <h3>{title}</h3>
          <span class="film-location">{metadata.location}</span>
        </div>
      </div>
    </div>
    <div class="film-edge" aria-hidden="true">
      <span class="film-edge-text">{metadata.camera}</span>
      <span class="film-edge-dot"></span>
      <span class="film-edge-text">{metadata.settings.shutter}</span>
    </div>
  </div>
</div>

<Lightbox id={id} image={image} title={title} metadata={metadata} />

<script>
  // Global setup for all photo cards - runs once
  if (!window.__photoCardsInitialized) {
    window.__photoCardsInitialized = true;
    
    document.addEventListener('click', (e) => {
      const photoWrapper = (e.target as HTMLElement).closest('[data-lightbox-trigger]');
      if (!photoWrapper) return;
      
      const photoId = photoWrapper.getAttribute('data-lightbox-trigger');
      if (!photoId) return;
      
      const lightbox = document.getElementById(`lightbox-${photoId}`);
      if (lightbox) {
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden';
      }
    });

    // Handle keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        const focused = document.activeElement as HTMLElement;
        if (focused?.hasAttribute('data-lightbox-trigger')) {
          e.preventDefault();
          focused.click();
        }
      }
    });
  }
</script>

<style>
  .photo-card {
    break-inside: avoid;
    margin-bottom: 2rem;
    width: 100%;
  }

  .photo-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    cursor: pointer;
    background: #000;
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .photo-wrapper:hover {
    border-color: var(--color-primary);
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6);
  }

  .photo-inner {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 1.2s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .photo-wrapper:hover img {
    transform: scale(1.05);
  }

  .overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 60%,
      rgba(0, 0, 0, 0.8) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .photo-wrapper:hover .overlay {
    opacity: 1;
  }

  .overlay-top {
    display: none;
  }

  .overlay-bottom {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .overlay h3 {
    margin: 0;
    font-family: var(--font-serif);
    font-size: 1.25rem;
    font-weight: 500;
    color: #fff;
    letter-spacing: 0.01em;
  }

  .film-location {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
    margin-top: 0.25rem;
  }

  .film-code {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.08em;
  }

  .film-edge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0.75rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.03);
    opacity: 0.4;
  }

  .film-edge-text {
    font-family: var(--font-mono);
    font-size: 0.5rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.2em;
    text-transform: uppercase;
  }

  .film-edge-dot {
    width: 2px;
    height: 2px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  @media (max-width: 768px) {
    .overlay {
      padding: 1rem;
    }

    .overlay h3 {
      font-size: 1rem;
    }
  }
</style>
