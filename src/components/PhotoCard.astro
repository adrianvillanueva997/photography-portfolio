---
import Lightbox from "./Lightbox.astro";

interface Props {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

const { id, title, image, thumbnail, metadata } = Astro.props;
---

<div class="photo-card">
  <div class="photo-wrapper" data-lightbox-trigger={id} role="button" tabindex="0" aria-label={`View ${title} in fullscreen`}>
    <div class="photo-inner">
      <img src={thumbnail} alt={title} loading="lazy" />
      <div class="overlay">
        <div class="overlay-top">
          <span class="film-code">{metadata.settings.aperture}</span>
          <span class="film-code">ISO {metadata.settings.iso}</span>
        </div>
        <div class="overlay-bottom">
          <h3>{title}</h3>
          <span class="film-location">{metadata.location}</span>
        </div>
      </div>
    </div>
    <div class="film-edge" aria-hidden="true">
      <span class="film-edge-text">{metadata.camera}</span>
      <span class="film-edge-dot"></span>
      <span class="film-edge-text">{metadata.settings.shutter}</span>
    </div>
  </div>
</div>

<Lightbox id={id} image={image} title={title} metadata={metadata} />

<script define:vars={{ id }}>
  const trigger = document.querySelector(`[data-lightbox-trigger="${id}"]`);

  function openLightbox() {
    const lightbox = document.getElementById(`lightbox-${id}`);
    if (lightbox) {
      lightbox.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  trigger?.addEventListener('click', openLightbox);
  trigger?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      openLightbox();
    }
  });
</script>

<style>
  .photo-card {
    width: 100%;
    overflow: hidden;
    height: fit-content;
  }

  .photo-wrapper {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    cursor: pointer;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    transition: border-color 0.4s ease, box-shadow 0.4s ease;
  }

  .photo-wrapper:hover {
    border-color: var(--color-border-light);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }

  .photo-inner {
    position: relative;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), filter 0.6s ease;
    filter: contrast(1.02) saturate(0.95);
  }

  .photo-wrapper:hover img {
    transform: scale(1.04);
    filter: contrast(1.05) saturate(1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(12, 11, 9, 0.3) 0%,
      transparent 30%,
      transparent 50%,
      rgba(12, 11, 9, 0.85) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 1rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .photo-wrapper:hover .overlay {
    opacity: 1;
  }

  .overlay-top {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .film-code {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--color-primary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0.8;
  }

  .overlay-bottom {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .overlay h3 {
    color: var(--color-text);
    margin: 0;
    font-size: 0.95rem;
    font-weight: 500;
    font-family: var(--font-serif);
  }

  .film-location {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.08em;
  }

  .film-edge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.4rem 0.75rem;
    background: var(--color-bg-card);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .photo-wrapper:hover .film-edge {
    opacity: 1;
  }

  .film-edge-text {
    font-family: var(--font-mono);
    font-size: 0.55rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    opacity: 0.6;
  }

  .film-edge-dot {
    width: 2px;
    height: 2px;
    border-radius: 50%;
    background: var(--color-border-light);
  }

  @media (max-width: 768px) {
    .film-edge {
      display: none;
    }

    .overlay {
      padding: 0.5rem 0.75rem;
    }

    .overlay h3 {
      font-size: 0.75rem;
    }

    .film-location {
      font-size: 0.55rem;
    }

    .film-code {
      font-size: 0.5rem;
    }
  }
</style>
