---
import MetadataCard from "./MetadataCard.astro";
import Lightbox from "./Lightbox.astro";

interface Props {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

const { id, title, image, thumbnail, metadata } = Astro.props;
---

<div class="photo-card">
  <div class="photo-wrapper" data-lightbox-trigger={id} role="button" tabindex="0" aria-label={`View ${title} in fullscreen`}>
    <img src={thumbnail} alt={title} loading="lazy" />
    <div class="overlay">
      <h3>{title}</h3>
    </div>
    <div class="metadata-wrapper">
      <MetadataCard metadata={metadata} />
    </div>
  </div>
</div>

<Lightbox id={id} image={image} title={title} metadata={metadata} />

<script define:vars={{ id }}>
  const trigger = document.querySelector(`[data-lightbox-trigger="${id}"]`);

  function openLightbox() {
    const lightbox = document.getElementById(`lightbox-${id}`);
    if (lightbox) {
      lightbox.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  trigger?.addEventListener('click', openLightbox);
  trigger?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter' || e.key === ' ') {
      e.preventDefault();
      openLightbox();
    }
  });
</script>

<style>
  .photo-card {
    width: 100%;
    overflow: hidden;
    height: fit-content;
  }

  .photo-wrapper {
    position: relative;
    width: 100%;
    height: auto;
    overflow: hidden;
    background: #1a1a1a;
    cursor: pointer;
    border-radius: 2px;
  }

  img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .photo-wrapper:hover img {
    transform: scale(1.08);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 60%, rgba(0, 0, 0, 0.8));
    display: flex;
    align-items: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .photo-wrapper:hover .overlay {
    opacity: 1;
  }

  .overlay h3 {
    color: #f5f5f5;
    margin: 0;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .metadata-wrapper {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
  }

  .photo-wrapper:hover .metadata-wrapper {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .metadata-wrapper {
      font-size: 0.75rem;
    }
  }
</style>
