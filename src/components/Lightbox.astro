---
import Watermark from "./Watermark.astro";

interface Props {
	id: string;
	image: string;
	title: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

const { id, image, title, metadata } = Astro.props;
---

<div class="lightbox" id={`lightbox-${id}`}>
  <div class="lightbox-backdrop"></div>
  <div class="lightbox-content">
    <button class="lightbox-close" aria-label="Close">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <div class="lightbox-image-wrapper">
      <div class="image-container">
        <img src={image} alt={title} />
        <Watermark photographer="© Adrian Villanueva" />
      </div>

      <div class="lightbox-footer">
        <div class="footer-layout">
          <div class="title-group">
            <p class="lightbox-title">{title}</p>
          </div>

          <div class="technical-bar">
            <div class="technical-item">
              <span class="technical-label">Location</span>
              <span class="technical-value">{metadata.location}</span>
            </div>
            <div class="technical-separator"></div>
            <div class="technical-item">
              <span class="technical-label">Equipment</span>
              <span class="technical-value">{metadata.camera}</span>
            </div>
            <div class="technical-separator"></div>
            <div class="technical-item">
              <span class="technical-label">Exposure</span>
              <span class="technical-value">{metadata.settings.aperture} • {metadata.settings.shutter} • ISO {metadata.settings.iso}</span>
            </div>
            <div class="technical-separator"></div>
            <div class="technical-item">
              <span class="technical-label">Chronology</span>
              <span class="technical-value">{metadata.dateTaken.replace(/:/g, '.')}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .lightbox {
    position: fixed;
    inset: 0;
    z-index: 1000;
    opacity: 0;
    visibility: hidden;
    transition: all 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .lightbox.active {
    opacity: 1;
    visibility: visible;
  }

  .lightbox-backdrop {
    position: absolute;
    inset: 0;
    background: #080807;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  .lightbox-content {
    position: absolute;
    inset: 0;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem 2rem;
  }

  .lightbox-image-wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 3.5rem;
  }

  .image-container {
    position: relative;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 0;
    width: 100%;
  }

  .image-container img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: #000;
    box-shadow: 0 40px 100px -20px rgba(0, 0, 0, 0.9);
  }

  .lightbox-footer {
    width: 100%;
    max-width: 1100px;
    flex-shrink: 0;
  }

  .footer-layout {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
  }

  .title-group {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
  }

  .meta-type {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    letter-spacing: 0.5em;
    text-transform: uppercase;
    color: var(--color-primary);
    opacity: 0.6;
    margin-bottom: 0.5rem;
  }

  .lightbox-title {
    color: var(--color-text);
    font-family: var(--font-serif);
    font-size: clamp(1.75rem, 5vw, 2.75rem);
    font-weight: 500;
    margin: 0;
    text-align: center;
    letter-spacing: -0.02em;
    line-height: 1.1;
  }

  .technical-bar {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 2.5rem;
    width: 100%;
    border-top: 1px solid rgba(255, 255, 255, 0.06);
    padding-top: 2rem;
  }

  .technical-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.6rem;
  }

  .technical-label {
    font-family: var(--font-mono);
    font-size: 0.55rem;
    letter-spacing: 0.25em;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    opacity: 0.4;
  }

  .technical-value {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.1em;
    white-space: nowrap;
  }

  .technical-separator {
    width: 1px;
    height: 14px;
    background: var(--color-primary);
    opacity: 0.2;
    margin-bottom: 4px;
  }

  .lightbox-close {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: transparent;
    border: none;
    color: var(--color-text-secondary);
    cursor: pointer;
    padding: 1rem;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 1002;
    opacity: 0.3;
  }

  .lightbox-close:hover {
    color: var(--color-primary);
    transform: rotate(90deg) scale(1.1);
    opacity: 1;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .lightbox.active .footer-layout {
    animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
    animation-delay: 0.2s;
  }

  @media (max-width: 900px) {
    .technical-bar {
      gap: 1.5rem;
    }
    .technical-value {
      font-size: 0.6rem;
    }
  }

  @media (max-width: 750px) {
    .technical-bar {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
      border: none;
      padding: 0;
      width: 100%;
    }

    .technical-separator {
      display: none;
    }

    .technical-item {
      align-items: center;
      padding: 1rem;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.04);
    }
  }

  @media (max-width: 480px) {
    .lightbox-content {
      padding: 1.5rem;
    }

    .lightbox-image-wrapper {
      gap: 2.5rem;
    }

    .lightbox-title {
      font-size: 1.6rem;
    }

    .lightbox-close {
      bottom: auto;
      top: 1rem;
      right: 1rem;
    }
  }
</style>

<script define:vars={{ id }}>
  const lightbox = document.getElementById(`lightbox-${id}`);

  function closeLightbox() {
    lightbox?.classList.remove('active');
    document.body.style.overflow = '';
  }

  // Close when clicking outside the photo/metadata
  lightbox?.addEventListener('click', (e) => {
    if (!lightbox.classList.contains('active')) return;
    
    const clickTarget = e.target;
    const isImg = clickTarget.closest('img');
    const isFooter = clickTarget.closest('.lightbox-footer');
    
    // Close if the click wasn't on the image or the footer metadata
    if (!isImg && !isFooter) {
      closeLightbox();
    }
  });

  function navigatePhotos(direction) {
    if (!lightbox?.classList.contains('active')) return;

    const allTriggers = document.querySelectorAll('[data-lightbox-trigger]');
    const currentIndex = Array.from(allTriggers).findIndex(t => t.getAttribute('data-lightbox-trigger') === id);

    let nextIndex;
    if (direction === 'next') {
      nextIndex = (currentIndex + 1) % allTriggers.length;
    } else {
      nextIndex = (currentIndex - 1 + allTriggers.length) % allTriggers.length;
    }

    const nextTrigger = allTriggers[nextIndex];
    if (nextTrigger) {
      closeLightbox();
      nextTrigger.click();
    }
  }

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && lightbox?.classList.contains('active')) {
      closeLightbox();
    }
    // Navigate with arrow keys
    if (lightbox?.classList.contains('active')) {
      if (e.key === 'ArrowRight') {
        e.preventDefault();
        navigatePhotos('next');
      } else if (e.key === 'ArrowLeft') {
        e.preventDefault();
        navigatePhotos('prev');
      }
    }
  });

  // Swipe navigation for mobile
  let touchStartX = 0;
  let touchEndX = 0;

  lightbox?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  }, false);

  lightbox?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    if (!lightbox?.classList.contains('active')) return;

    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        navigatePhotos('next'); // Swiped left, show next
      } else {
        navigatePhotos('prev'); // Swiped right, show previous
      }
    }
  }, false);
</script>
