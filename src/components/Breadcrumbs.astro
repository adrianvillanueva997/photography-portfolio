---
interface Props {
	collection: string;
}

const { collection } = Astro.props;
---

<nav class="breadcrumbs">
  <a href="/">Home</a>
  <span class="divider">/</span>
  <a href="/collections">Collections</a>
  <span class="divider">/</span>
  <span class="current">{collection}</span>
</nav>

<style>
  .breadcrumbs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: #a0a0a0;
    padding: 1rem 0;
  }

  .breadcrumbs a {
    color: #d4af37;
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumbs a:hover {
    color: #f5f5f5;
  }

  .divider {
    color: #666;
  }

  .current {
    color: #f5f5f5;
    font-weight: 500;
  }
</style>
