---
interface Props {
  currentPage?: string;
}

const { currentPage } = Astro.props;
---

<header class="header" role="banner">
  <div class="header-container">
    <a href="/" class="logo" aria-label="Adrian Villanueva - Home">Adrian Villanueva</a>
    <nav class="nav" role="navigation" aria-label="Main navigation">
      <a href="/" class={currentPage === 'home' ? 'active' : ''} aria-current={currentPage === 'home' ? 'page' : undefined}>Home</a>
      <a href="/collections" class={currentPage === 'collections' ? 'active' : ''} aria-current={currentPage === 'collections' ? 'page' : undefined}>Collections</a>
      <a href="/stats" class={currentPage === 'stats' ? 'active' : ''} aria-current={currentPage === 'stats' ? 'page' : undefined}>Stats</a>
      <a href="/about" class={currentPage === 'about' ? 'active' : ''} aria-current={currentPage === 'about' ? 'page' : undefined}>About</a>
    </nav>
  </div>
</header>

<style>
  .header {
    background: #0a0a0a;
    border-bottom: 1px solid #2a2a2a;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1.5rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: #f5f5f5;
    text-decoration: none;
    transition: color 0.2s;
  }

  .logo:hover {
    color: #d4af37;
  }

  .nav {
    display: flex;
    gap: 2rem;
  }

  .nav a {
    color: #a0a0a0;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
    position: relative;
  }

  .nav a:hover {
    color: #f5f5f5;
  }

  .nav a.active {
    color: #d4af37;
  }

  .nav a.active::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 100%;
    height: 2px;
    background: #d4af37;
  }
</style>
