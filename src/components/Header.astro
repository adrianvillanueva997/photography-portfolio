---
import Logo from "./Logo.astro";

interface Props {
	currentPage?: string;
}

const { currentPage } = Astro.props;
---

<header class="header" role="banner">
  <div class="header-container">
    <a href="/" class="logo-link" aria-label="Adrian Villanueva - Home">
      <Logo size="small" />
      <span class="logo-text">Adrian Villanueva</span>
    </a>
    <nav class="nav" role="navigation" aria-label="Main navigation">
      <a href="/" class={currentPage === 'home' ? 'active' : ''} aria-current={currentPage === 'home' ? 'page' : undefined}>Home</a>
      <span class="nav-dot" aria-hidden="true"></span>
      <a href="/collections" class={currentPage === 'collections' ? 'active' : ''} aria-current={currentPage === 'collections' ? 'page' : undefined}>Collections</a>
      <span class="nav-dot" aria-hidden="true"></span>
      <a href="/stats" class={currentPage === 'stats' ? 'active' : ''} aria-current={currentPage === 'stats' ? 'page' : undefined}>Stats</a>
      <span class="nav-dot" aria-hidden="true"></span>
      <a href="/about" class={currentPage === 'about' ? 'active' : ''} aria-current={currentPage === 'about' ? 'page' : undefined}>About</a>
    </nav>
  </div>
  <div class="header-line" aria-hidden="true"></div>
</header>

<style>
  .header {
    background: transparent;
    position: sticky;
    top: 0;
    z-index: 100;
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    background: rgba(12, 11, 9, 0.85);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 1.25rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .header-line {
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      var(--color-border) 20%,
      var(--color-primary-dim) 50%,
      var(--color-border) 80%,
      transparent 100%
    );
    opacity: 0.6;
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    transition: opacity 0.3s;
  }

  .logo-link:hover {
    opacity: 0.7;
  }

  .logo-text {
    font-family: var(--font-serif);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-text);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .nav {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .nav-dot {
    width: 3px;
    height: 3px;
    border-radius: 50%;
    background: var(--color-border-light);
  }

  .nav a {
    color: var(--color-text-secondary);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 400;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    transition: color 0.3s;
    padding: 0.5rem 0.75rem;
    position: relative;
  }

  .nav a:hover {
    color: var(--color-text);
  }

  .nav a.active {
    color: var(--color-primary);
  }

  .nav a.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--color-primary);
  }

  @media (max-width: 768px) {
    .header-container {
      padding: 0.85rem 1.25rem;
      flex-direction: row;
      gap: 0;
    }

    .logo-text {
      font-size: 0.85rem;
      letter-spacing: 0.04em;
    }

    .nav {
      gap: 0;
    }

    .nav-dot {
      display: none;
    }

    .nav a {
      font-size: 0.65rem;
      padding: 0.4rem 0.5rem;
      letter-spacing: 0.08em;
    }
  }

  @media (max-width: 480px) {
    .header-container {
      padding: 0.75rem 1rem;
    }

    .logo-link {
      gap: 0.5rem;
    }

    .logo-text {
      font-size: 0.75rem;
    }

    .nav a {
      font-size: 0.6rem;
      padding: 0.35rem 0.35rem;
      letter-spacing: 0.05em;
    }
  }

  @media (max-width: 360px) {
    .logo-text {
      display: none;
    }

    .nav a {
      font-size: 0.6rem;
      padding: 0.35rem 0.4rem;
    }
  }
</style>
