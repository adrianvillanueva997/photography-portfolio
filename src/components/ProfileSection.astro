---
import mePhoto from '../assets/me-display.avif';
---

<section class="profile">
  <div class="profile-container">
    <div class="profile-left">
      <div class="profile-tag">
        <span class="tag-line"></span>
        <span class="tag-text">Photographer</span>
      </div>
      <h1>
        <span class="name-line">Adrian</span>
        <span class="name-line name-accent">Villanueva</span>
      </h1>
      <p class="bio">
        Capturing the quiet drama of urban landscapes and the raw energy of live music.
        Based in Tokyo, originally from Spain.
      </p>
      <div class="profile-meta">
        <span class="meta-item">
          <span class="meta-marker">35mm</span>
          Tokyo, JP
        </span>
        <span class="meta-divider">/</span>
        <span class="meta-item">
          <span class="meta-marker">EST.</span>
          2020
        </span>
      </div>
      <div class="profile-links">
        <a href="https://adrianvillanueva.com" target="_blank" rel="noopener noreferrer" class="link-btn" aria-label="Portfolio">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
          </svg>
          <span>Web</span>
        </a>
        <a href="https://metalops.dev" target="_blank" rel="noopener noreferrer" class="link-btn" aria-label="MetalOps">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
          </svg>
          <span>Code</span>
        </a>
        <a href="https://instagram.com/dude.traveler" target="_blank" rel="noopener noreferrer" class="link-btn" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <circle cx="17.5" cy="6.5" r="1.5"></circle>
          </svg>
          <span>IG</span>
        </a>
      </div>
    </div>
    <div class="profile-right">
      <div class="photo-frame">
        <img src={mePhoto.src} alt="Adrian Villanueva" loading="eager" />
        <div class="frame-corner frame-tl" aria-hidden="true"></div>
        <div class="frame-corner frame-br" aria-hidden="true"></div>
      </div>
    </div>
  </div>
  <div class="scroll-hint" aria-hidden="true">
    <span class="scroll-text">Scroll to explore</span>
    <span class="scroll-line"></span>
  </div>
</section>

<style>
  .profile {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem 3rem;
    animation: fadeInUp 0.8s ease-out;
  }

  .profile-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .profile-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .profile-tag {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .tag-line {
    display: block;
    width: 40px;
    height: 1px;
    background: var(--color-primary);
  }

  .tag-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  h1 {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 500;
    line-height: 1.05;
    color: var(--color-text);
    margin: 0;
  }

  .name-line {
    display: block;
  }

  .name-accent {
    color: var(--color-primary);
    font-style: italic;
  }

  .bio {
    color: var(--color-text-secondary);
    font-size: 1rem;
    line-height: 1.7;
    max-width: 440px;
    font-weight: 300;
  }

  .profile-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.05em;
  }

  .meta-marker {
    color: var(--color-primary-dim);
    margin-right: 0.5rem;
  }

  .meta-divider {
    color: var(--color-border-light);
  }

  .profile-links {
    display: flex;
    gap: 0.75rem;
    margin-top: 0.5rem;
    flex-wrap: wrap;
  }

  .link-btn {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.6rem 1rem;
    color: var(--color-text-secondary);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border: 1px solid var(--color-border);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .link-btn:hover {
    color: var(--color-text);
    border-color: var(--color-primary-dim);
    background: rgba(200, 164, 90, 0.05);
  }

  .link-btn svg {
    display: block;
  }

  .profile-right {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .photo-frame {
    position: relative;
    width: 100%;
    max-width: 360px;
    max-height: 400px;
    overflow: hidden;
  }

  .photo-frame img {
    width: 100%;
    height: 100%;
    max-height: 400px;
    object-fit: cover;
    object-position: center 40%;
    filter: grayscale(15%) contrast(1.05);
    transition: filter 0.5s ease;
  }

  .photo-frame:hover img {
    filter: grayscale(0%) contrast(1);
  }

  .frame-corner {
    position: absolute;
    width: 30px;
    height: 30px;
    border-color: var(--color-primary-dim);
    border-style: solid;
    border-width: 0;
    opacity: 0.5;
  }

  .frame-tl {
    top: -1px;
    left: -1px;
    border-top-width: 1px;
    border-left-width: 1px;
  }

  .frame-br {
    bottom: -1px;
    right: -1px;
    border-bottom-width: 1px;
    border-right-width: 1px;
  }

  .scroll-hint {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    margin-top: 3rem;
    animation: fadeIn 1.5s ease-out 0.5s both;
  }

  .scroll-text {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-text-secondary);
    opacity: 0.5;
  }

  .scroll-line {
    display: block;
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--color-text-secondary), transparent);
    opacity: 0.3;
    animation: scrollPulse 2s ease-in-out infinite;
  }

  @keyframes scrollPulse {
    0%, 100% { opacity: 0.15; transform: scaleY(0.8); }
    50% { opacity: 0.4; transform: scaleY(1); }
  }

  @media (max-width: 968px) {
    .profile {
      padding: 2.5rem 1.5rem 2rem;
    }

    .profile-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .profile-left {
      order: 2;
      gap: 1.25rem;
    }

    .bio {
      max-width: 100%;
    }

    .profile-right {
      order: 1;
    }

    .photo-frame {
      max-width: 280px;
      max-height: 320px;
      margin: 0 auto;
    }

    .photo-frame img {
      max-height: 320px;
    }

    h1 {
      font-size: clamp(2rem, 8vw, 3rem);
    }

    .scroll-hint {
      margin-top: 2rem;
    }
  }

  @media (max-width: 480px) {
    .profile {
      padding: 1.5rem 1rem 1.25rem;
    }

    .profile-container {
      gap: 1.5rem;
    }

    .profile-left {
      gap: 1rem;
    }

    .photo-frame {
      max-width: 220px;
      max-height: 260px;
    }

    .photo-frame img {
      max-height: 260px;
    }

    .profile-links {
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .link-btn {
      padding: 0.5rem 0.75rem;
      font-size: 0.65rem;
    }

    .link-btn svg {
      width: 16px;
      height: 16px;
    }

    .bio {
      font-size: 0.9rem;
      line-height: 1.6;
    }

    .profile-meta {
      font-size: 0.7rem;
      gap: 0.75rem;
    }

    .tag-line {
      width: 24px;
    }

    .tag-text {
      font-size: 0.6rem;
    }

    .scroll-hint {
      display: none;
    }
  }
</style>
