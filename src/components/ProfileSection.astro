---
import mePhoto from '../assets/me-display.avif';
---

<section class="profile">
  <div class="profile-container">
    <div class="profile-image">
      <img src={mePhoto.src} alt="Adrian Villanueva" />
    </div>
    <div class="profile-content">
      <h1>Adrian Villanueva</h1>
      <p class="bio">
        Spanish Tokyo-based photographer capturing urban landscapes and natural beauty.
        Welcome to my own world!
      </p>
      <div class="profile-links">
        <a href="https://adrianvillanueva.com" target="_blank" rel="noopener noreferrer" class="link-icon" title="Portfolio" aria-label="Portfolio">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="2" y1="12" x2="22" y2="12"></line>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"></path>
          </svg>
        </a>
        <a href="https://metalops.dev" target="_blank" rel="noopener noreferrer" class="link-icon" title="MetalOps" aria-label="MetalOps">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="16 18 22 12 16 6"></polyline>
            <polyline points="8 6 2 12 8 18"></polyline>
          </svg>
        </a>
        <a href="https://instagram.com/dude.traveler" target="_blank" rel="noopener noreferrer" class="link-icon" title="Instagram" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
            <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
            <circle cx="17.5" cy="6.5" r="1.5"></circle>
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .profile {
    max-width: 1200px;
    margin: 4rem auto;
    padding: 0 2rem;
  }

  .profile-container {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 3rem;
    align-items: center;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid #d4af37;
    flex-shrink: 0;
  }

  .profile-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .profile-content h1 {
    font-size: 2.5rem;
    color: #f5f5f5;
    margin: 0 0 1rem 0;
    font-weight: 700;
  }

  .bio {
    color: #a0a0a0;
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
    max-width: 600px;
  }

  .profile-links {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
  }

  .link-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem;
    color: #d4af37;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s;
    border: 1px solid #d4af37;
  }

  .link-icon:hover {
    background: #d4af37;
    color: #0a0a0a;
  }

  .link-icon svg {
    display: block;
  }

  @media (max-width: 768px) {
    .profile-container {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .profile-image {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }

    .profile-content h1 {
      font-size: 2rem;
      text-align: center;
    }

    .bio {
      text-align: center;
    }

    .profile-links {
      justify-content: center;
    }
  }
</style>
