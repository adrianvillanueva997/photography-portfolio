---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import OptimizedImage from "../../components/OptimizedImage.astro";
import yaml from "js-yaml";

interface Photo {
	id?: string;
	title: string;
	collection?: string;
	thumbnail: string;
	metadata?: {
		camera: string;
		lens: string;
		settings: {
			iso: number | number[];
			aperture: string;
			shutter: string;
			focalLength: string | number;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

// Load all YAML files
const collectionFiles = import.meta.glob("../../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});
const collections: Array<{ data: Collection; slug: string }> = [];

for (const [path, getContent] of Object.entries(collectionFiles)) {
	const content = (await getContent()) as string;
	const data = yaml.load(content) as Collection;
	const slug = path.split("/").pop()?.replace(".yaml", "") || "";
	collections.push({ data, slug });
}

// Calculate stats
const totalPhotos = collections.reduce(
	(sum, c) => sum + c.data.photos.length,
	0,
);
const sortedCollections = collections.sort(
	(a, b) => b.data.photos.length - a.data.photos.length,
);
---

<Layout title="Collections - Adrian Villanueva" description="Browse photography collections: Urban landscapes and nature photography from Tokyo.">
  <Header currentPage="collections" />

  <main class="main">
    <section class="collections-section">
      <div class="collections-container">
        <div class="header-block">
          <div class="header-top">
            <div class="header-tag">
              <span class="tag-line"></span>
              <span class="tag-text">Archive</span>
            </div>
            <div class="stats-bar">
              <div class="stat">
                <span class="stat-number">{collections.length}</span>
                <span class="stat-label">Collections</span>
              </div>
              <span class="stat-divider">/</span>
              <div class="stat">
                <span class="stat-number">{totalPhotos}</span>
                <span class="stat-label">Photographs</span>
              </div>
            </div>
          </div>
          <h1>Collections</h1>
          <p class="subtitle">Curated bodies of work, organized by theme and place.</p>
        </div>

        <div class="collections-grid">
          {sortedCollections.map((collection, index) => (
            <a href={`/collections/${collection.slug}`} class="collection-card" style={`animation-delay: ${index * 0.1}s`}>
              <div class="collection-preview">
                <OptimizedImage
                  src={collection.data.photos[0]?.collection}
                  alt={collection.data.collection}
                  widths={[]}
                  priority={index < 3}
                  loading={index < 3 ? "eager" : "lazy"}
                  metadata={collection.data.photos[0]?.metadata}
                />
                <div class="overlay">
                  <div class="overlay-content">
                    <span class="overlay-count">{collection.data.photos.length} photographs</span>
                    <span class="overlay-cta">View Collection</span>
                  </div>
                </div>
              </div>
              <div class="collection-info">
                <div class="collection-header">
                  <h3>{collection.data.collection}</h3>
                  <span class="photo-count">{collection.data.photos.length}</span>
                </div>
                <p>{collection.data.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .collections-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .header-block {
    margin-bottom: 4rem;
  }

  .header-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
  }

  .header-tag {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .tag-line {
    display: block;
    width: 40px;
    height: 1px;
    background: var(--color-primary);
  }

  .tag-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  h1 {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    font-weight: 500;
  }

  .subtitle {
    color: var(--color-text-secondary);
    font-size: 1rem;
    margin: 0;
    font-weight: 300;
    max-width: 500px;
  }

  .stats-bar {
    display: flex;
    gap: 1.25rem;
    align-items: center;
    font-family: var(--font-mono);
    white-space: nowrap;
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.2rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
    font-family: var(--font-mono);
  }

  .stat-label {
    font-size: 0.6rem;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    opacity: 0.6;
  }

  .stat-divider {
    color: var(--color-border-light);
    font-size: 1.2rem;
    opacity: 0.4;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: 2.5rem;
  }

  .collection-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
    border: 1px solid var(--color-border);
    background: var(--color-bg-card);
    transition: all 0.4s ease;
    animation: fadeInUp 0.6s ease-out both;
  }

  .collection-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-light);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.35);
  }

  .collection-preview {
    position: relative;
    width: 100%;
    aspect-ratio: 3/2;
    overflow: hidden;
    background: var(--color-bg-alt);
    contain: layout style;
  }

  .collection-preview img,
  .collection-preview picture {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), filter 0.6s ease;
    filter: saturate(0.9);
  }

  .collection-card:hover .collection-preview img,
  .collection-card:hover .collection-preview picture {
    transform: scale(1.05);
    filter: saturate(1);
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(to bottom, rgba(12, 11, 9, 0) 50%, rgba(12, 11, 9, 0.8) 100%);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .collection-card:hover .overlay {
    opacity: 1;
  }

  .overlay-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .overlay-count {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .overlay-cta {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-primary);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    opacity: 0;
    transform: translateX(-8px);
    transition: all 0.3s ease 0.1s;
  }

  .collection-card:hover .overlay-cta {
    opacity: 1;
    transform: translateX(0);
  }

  .collection-info {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    border-top: 1px solid var(--color-border);
  }

  .collection-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.75rem;
  }

  .collection-info h3 {
    color: var(--color-text);
    margin: 0;
    font-size: 1.2rem;
    font-weight: 500;
    font-family: var(--font-serif);
    flex: 1;
  }

  .photo-count {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--color-text-secondary);
    letter-spacing: 0.15em;
    white-space: nowrap;
    padding: 0.3rem 0.6rem;
    border: 1px solid var(--color-border);
  }

  .collection-info p {
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.6;
    font-size: 0.9rem;
    font-weight: 300;
  }

  @media (max-width: 768px) {
    .collections-section {
      padding: 2.5rem 1.25rem;
    }

    .header-top {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.25rem;
    }

    .header-block {
      margin-bottom: 2.5rem;
    }

    .collections-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    h1 {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .collections-section {
      padding: 1.5rem 1rem;
    }

    .header-block {
      margin-bottom: 2rem;
    }

    .collections-grid {
      gap: 1.5rem;
    }

    .collection-info {
      padding: 1rem;
    }

    .collection-info h3 {
      font-size: 1.05rem;
    }

    .collection-info p {
      font-size: 0.85rem;
    }

    .overlay {
      padding: 1rem;
    }

    .subtitle {
      font-size: 0.9rem;
    }

    h1 {
      font-size: 1.75rem;
    }

    .tag-line {
      width: 24px;
    }

    .tag-text {
      font-size: 0.6rem;
    }

    .stat-number {
      font-size: 1.2rem;
    }
  }
</style>
