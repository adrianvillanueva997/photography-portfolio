---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PhotoCard from "../../components/PhotoCard.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { generateCollectionSchema } from "../../lib/imageMetadata.ts";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

export async function getStaticPaths() {
	const collectionFiles = import.meta.glob("../../data/collections/*.yaml", {
		query: "?raw",
		import: "default",
	});
	const paths = [];

	for (const [path] of Object.entries(collectionFiles)) {
		const slug = path.split("/").pop()?.replace(".yaml", "") || "";
		paths.push({ params: { collection: slug } });
	}

	return paths;
}

const { collection } = Astro.params;
const collectionFiles = import.meta.glob("../../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});

let data: Collection | null = null;
for (const [path, getContent] of Object.entries(collectionFiles)) {
	const slug = path.split("/").pop()?.replace(".yaml", "") || "";
	if (slug === collection) {
		const content = (await getContent()) as string;
		data = yaml.load(content) as Collection;
		break;
	}
}

if (!data) {
	throw new Error(`Collection ${collection} not found`);
}

// Generate JSON-LD schema for collection
const imageUrls = data.photos.map(photo => photo.image);
const collectionUrl = `https://avm.photography/collections/${collection}`;
const collectionSchema = generateCollectionSchema(
	data.collection,
	data.description,
	imageUrls,
	collectionUrl
);
---

<Layout title={`${data.collection} - Adrian Villanueva`} description={data.description} image={data.photos[0]?.image}>
  <!-- JSON-LD Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} />

  <Header currentPage="collections" />

  <main class="main">
    <section class="collection-header">
      <div class="header-container">
        <Breadcrumbs collection={data.collection} />
        <a href="/collections" class="back-link">‚Üê Back to Collections</a>
        <h1>{data.collection}</h1>
        <p class="description">{data.description}</p>
      </div>
    </section>

    <section class="gallery-section">
      <div class="gallery-container">
        <div class="gallery-grid">
          {data.photos.map(photo => (
            <PhotoCard
              id={photo.id}
              title={photo.title}
              image={photo.image}
              thumbnail={photo.thumbnail}
              metadata={photo.metadata}
            />
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .collection-header {
    background: linear-gradient(135deg, #1a1a1a 0%, #0a0a0a 100%);
    padding: 4rem 2rem;
    border-bottom: 1px solid #2a2a2a;
  }

  .header-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .back-link {
    color: #d4af37;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
    display: inline-block;
    margin-bottom: 1rem;
  }

  .back-link:hover {
    color: #f5f5f5;
  }

  h1 {
    font-size: 2.5rem;
    color: #f5f5f5;
    margin: 1rem 0 0.5rem 0;
  }

  .description {
    color: #a0a0a0;
    font-size: 1.1rem;
    margin: 0;
  }

  .gallery-section {
    padding: 4rem 0 4rem 0;
  }

  .gallery-container {
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    padding: 2rem 1rem;
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 0.75rem;
      padding: 1rem 0.75rem;
    }
  }
</style>
