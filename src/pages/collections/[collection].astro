---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import PhotoCard from "../../components/PhotoCard.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import { generateCollectionSchema } from "../../lib/imageMetadata.ts";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

export async function getStaticPaths() {
	const collectionFiles = import.meta.glob("../../data/collections/*.yaml", {
		query: "?raw",
		import: "default",
	});
	const paths = [];

	for (const [path] of Object.entries(collectionFiles)) {
		const slug = path.split("/").pop()?.replace(".yaml", "") || "";
		paths.push({ params: { collection: slug } });
	}

	return paths;
}

const { collection } = Astro.params;
const collectionFiles = import.meta.glob("../../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});

let data: Collection | null = null;
for (const [path, getContent] of Object.entries(collectionFiles)) {
	const slug = path.split("/").pop()?.replace(".yaml", "") || "";
	if (slug === collection) {
		const content = (await getContent()) as string;
		data = yaml.load(content) as Collection;
		break;
	}
}

if (!data) {
	throw new Error(`Collection ${collection} not found`);
}

// Generate JSON-LD schema for collection
const imageUrls = data.photos.map(photo => photo.image);
const collectionUrl = `https://avm.photography/collections/${collection}`;
const collectionSchema = generateCollectionSchema(
	data.collection,
	data.description,
	imageUrls,
	collectionUrl
);
---

<Layout title={`${data.collection} - Adrian Villanueva`} description={data.description} image={data.photos[0]?.image}>
  <!-- JSON-LD Schema for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(collectionSchema)} />

  <Header currentPage="collections" />

  <main class="main">
    <section class="collection-header">
      <div class="header-container">
        <Breadcrumbs collection={data.collection} />
        <a href="/collections" class="back-link">
          <span class="back-arrow">&larr;</span>
          <span>Back to Collections</span>
        </a>
        <div class="header-tag">
          <span class="tag-line"></span>
          <span class="tag-text">Collection</span>
          <span class="tag-count">{data.photos.length} photographs</span>
        </div>
        <h1>{data.collection}</h1>
        <p class="description">{data.description}</p>
      </div>
    </section>

    <section class="gallery-section">
      <div class="gallery-container">
        <div class="gallery-grid">
          {data.photos.map(photo => (
            <PhotoCard
              id={photo.id}
              title={photo.title}
              image={photo.image}
              thumbnail={photo.thumbnail}
              metadata={photo.metadata}
            />
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .collection-header {
    padding: 4rem 2rem 3rem;
    border-bottom: 1px solid var(--color-border);
    animation: fadeInUp 0.6s ease-out;
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    transition: color 0.3s;
    margin-bottom: 2rem;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .back-arrow {
    font-size: 1rem;
    line-height: 1;
  }

  .header-tag {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .tag-line {
    display: block;
    width: 40px;
    height: 1px;
    background: var(--color-primary);
  }

  .tag-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  .tag-count {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    opacity: 0.6;
    margin-left: auto;
  }

  h1 {
    font-family: var(--font-serif);
    font-size: clamp(2.5rem, 5vw, 4rem);
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    font-weight: 500;
  }

  .description {
    color: var(--color-text-secondary);
    font-size: 1.05rem;
    margin: 0;
    max-width: 600px;
    font-weight: 300;
    line-height: 1.6;
  }

  .gallery-section {
    padding: 3rem 0 4rem 0;
    animation: fadeInUp 0.6s ease-out 0.2s both;
  }

  .gallery-container {
    width: 100%;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    padding: 2rem 1rem;
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .collection-header {
      padding: 2.5rem 1.25rem 2rem;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
      padding: 1.25rem 1rem;
    }

    .header-tag {
      flex-wrap: wrap;
    }

    .tag-count {
      margin-left: 0;
      flex-basis: 100%;
      padding-left: calc(40px + 1rem);
    }

    .back-link {
      margin-bottom: 1.5rem;
    }

    h1 {
      font-size: clamp(1.75rem, 6vw, 2.5rem);
    }
  }

  @media (max-width: 480px) {
    .collection-header {
      padding: 1.5rem 1rem 1.5rem;
    }

    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
      padding: 1rem 0.75rem;
    }

    .description {
      font-size: 0.9rem;
    }

    .tag-line {
      width: 24px;
    }

    .tag-text {
      font-size: 0.6rem;
    }

    .tag-count {
      padding-left: calc(24px + 1rem);
    }

    .back-link {
      font-size: 0.65rem;
      margin-bottom: 1rem;
    }
  }
</style>
