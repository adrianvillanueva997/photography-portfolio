---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Stats from "../components/Stats.astro";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

// Load stats data
const statsFile = await import("../data/stats.yaml?raw", {
	assert: { type: "raw" },
});
const statsData = yaml.load(statsFile.default) as {
	title: string;
	subtitle: string;
	details: Array<{
		label: string;
		title: string;
		text?: string;
		gear?: Array<{ name: string; type: string; description?: string }>;
		locations?: Array<{ name: string; description?: string }>;
		description?: string;
	}>;
};

// Load all YAML files
const collectionFiles = import.meta.glob("../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});
const allPhotos: Photo[] = [];

for (const [_path, getContent] of Object.entries(collectionFiles)) {
	const content = (await getContent()) as string;
	const data = yaml.load(content) as Collection;
	allPhotos.push(...data.photos);
}

const photoCount = allPhotos.length;
const collectionCount = Object.keys(collectionFiles).length;
---

<Layout title="Statistics - Adrian Villanueva" description="Photography portfolio statistics: total photos, collections, and gear used.">
  <Header currentPage="stats" />

  <main class="main">
    <section class="stats-section">
      <div class="stats-container">
        <h1>{statsData.title}</h1>
        <p class="subtitle">{statsData.subtitle}</p>

        <Stats photoCount={photoCount} collectionCount={collectionCount} />

        <div class="stats-details">
          {statsData.details.map((detail) => (
            <div class="detail-card">
              <h3>{detail.title}</h3>
              {detail.label === 'Gear' && detail.gear && detail.gear.length > 0 && (
                <ul class="gear-list">
                  {detail.gear.map((item) => (
                    <li class="gear-item">
                      <span class="gear-name">{item.name}</span>
                      {item.type && <span class="gear-type">{item.type}</span>}
                      {item.description && <p class="gear-description">{item.description}</p>}
                    </li>
                  ))}
                </ul>
              )}
              {detail.label === 'Locations' && detail.locations && detail.locations.length > 0 && (
                <ul class="locations-list">
                  {detail.locations.map((location) => (
                    <li class="location-item">
                      <span class="location-name">{location.name}</span>
                      {location.description && <p class="location-description">{location.description}</p>}
                    </li>
                  ))}
                </ul>
              )}
              {detail.label === 'Collections' && (
                <p class="detail-text">{collectionCount} Active Collections</p>
              )}
              {detail.description && <p class="detail-desc">{detail.description}</p>}
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .stats-section {
    padding: 4rem 2rem;
    animation: fadeInUp 0.6s ease-out;
  }

  .stats-container {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-family: var(--font-serif);
    font-size: clamp(2rem, 5vw, 3rem);
    color: var(--color-text);
    margin-bottom: 0.5rem;
    text-align: center;
    font-weight: 500;
  }

  .subtitle {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 1rem;
    margin-bottom: 3rem;
    font-family: var(--font-serif);
    font-style: italic;
    font-weight: 300;
  }

  .stats-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  .detail-card {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .detail-card:hover {
    border-color: var(--color-border-light);
  }

  .detail-card h3 {
    color: var(--color-primary);
    font-family: var(--font-mono);
    font-size: 0.75rem;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 400;
  }

  .detail-text {
    color: var(--color-text);
    font-family: var(--font-serif);
    font-size: 1.05rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .detail-desc {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
    line-height: 1.6;
    font-weight: 300;
  }

  .gear-list {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 1rem 0;
  }

  .gear-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .gear-name {
    font-weight: 500;
    font-family: var(--font-serif);
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .gear-type {
    font-size: 0.7rem;
    font-family: var(--font-mono);
    color: var(--color-text-secondary);
    padding: 0.2rem 0.5rem;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
    width: fit-content;
    letter-spacing: 0.1em;
    text-transform: uppercase;
  }

  .gear-description {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin: 0;
    padding: 0;
    line-height: 1.5;
    font-weight: 300;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .locations-list {
    list-style: none;
    padding: 0;
    margin: 0.75rem 0 1rem 0;
  }

  .location-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    margin-bottom: 1.25rem;
    color: var(--color-text);
    font-size: 0.95rem;
  }

  .location-name {
    font-weight: 500;
    font-family: var(--font-serif);
    word-break: break-word;
    overflow-wrap: break-word;
  }

  .location-description {
    font-size: 0.85rem;
    color: var(--color-text-secondary);
    margin: 0;
    padding: 0;
    line-height: 1.5;
    font-weight: 300;
    word-break: break-word;
    overflow-wrap: break-word;
  }

  @media (max-width: 768px) {
    .stats-section {
      padding: 2rem 1.25rem;
    }

    .stats-details {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      margin-top: 2.5rem;
    }

    .subtitle {
      margin-bottom: 2rem;
    }
  }

  @media (max-width: 480px) {
    .stats-section {
      padding: 1.5rem 1rem;
    }

    .detail-card {
      padding: 1.25rem;
    }

    .subtitle {
      font-size: 0.9rem;
    }
  }
</style>
