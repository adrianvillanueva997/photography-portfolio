---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Stats from "../components/Stats.astro";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

// Load stats data
const statsFile = await import("../data/stats.yaml?raw", {
	assert: { type: "raw" },
});
const statsData = yaml.load(statsFile.default) as {
	title: string;
	subtitle: string;
	details: Array<{
		label: string;
		title: string;
		text?: string;
		description: string;
	}>;
};

// Load all YAML files
const collectionFiles = import.meta.glob("../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});
const allPhotos: Photo[] = [];

for (const [_path, getContent] of Object.entries(collectionFiles)) {
	const content = (await getContent()) as string;
	const data = yaml.load(content) as Collection;
	allPhotos.push(...data.photos);
}

const photoCount = allPhotos.length;
const collectionCount = Object.keys(collectionFiles).length;
---

<Layout title="Statistics - Adrian Villanueva" description="Photography portfolio statistics: total photos, collections, and gear used.">
  <Header currentPage="stats" />

  <main class="main">
    <section class="stats-section">
      <div class="stats-container">
        <h1>{statsData.title}</h1>
        <p class="subtitle">{statsData.subtitle}</p>

        <Stats photoCount={photoCount} collectionCount={collectionCount} camera="Canon EOS R5" />

        <div class="stats-details">
          {statsData.details.map((detail) => (
            <div class="detail-card">
              <h3>{detail.title}</h3>
              {detail.label === 'Gear' && (
                <p class="detail-text">Canon EOS R5 with RF mount lenses</p>
              )}
              {detail.label === 'Locations' && (
                <p class="detail-text">{detail.text}</p>
              )}
              {detail.label === 'Collections' && (
                <p class="detail-text">{collectionCount} Active Collections</p>
              )}
              <p class="detail-desc">{detail.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .stats-section {
    padding: 4rem 2rem;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.05) 0%, rgba(212, 175, 55, 0.02) 100%);
  }

  .stats-container {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    color: #f5f5f5;
    margin-bottom: 0.5rem;
    text-align: center;
    font-weight: 600;
  }

  .subtitle {
    text-align: center;
    color: #999;
    font-size: 1.1rem;
    margin-bottom: 3rem;
    font-style: italic;
  }

  .stats-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  .detail-card {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    padding: 2rem;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .detail-card:hover {
    border-color: #d4af37;
    background: #1f1f1f;
  }

  .detail-card h3 {
    color: #d4af37;
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
  }

  .detail-text {
    color: #f5f5f5;
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .detail-desc {
    color: #999;
    font-size: 0.95rem;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.8rem;
    }

    .stats-section {
      padding: 2rem 1rem;
    }

    .stats-details {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }
  }
</style>
