---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProfileSection from "../components/ProfileSection.astro";
import PhotoCard from "../components/PhotoCard.astro";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

// Load all YAML files
const collectionFiles = import.meta.glob("../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});
const allPhotos: Photo[] = [];

for (const [_path, getContent] of Object.entries(collectionFiles)) {
	const content = (await getContent()) as string;
	const data = yaml.load(content) as Collection;
	allPhotos.push(...data.photos);
}

// Derive a unique ID from the image URL filename
function uniqueIdFromImage(photo: Photo): string {
	const filename = photo.image.split('/').pop()?.replace(/\.[^.]+$/, '') || photo.id;
	return filename;
}

// Sort photos by dateTaken in descending order (newest first)
const sortedPhotos = [...allPhotos].sort((a, b) => {
	const dateStrA = String(a.metadata.dateTaken);
	const dateStrB = String(b.metadata.dateTaken);
	// Replace colons only in date part (YYYY:MM:DD format)
	const parsedA = dateStrA.replace(/(\d{4}):(\d{2}):(\d{2})/, '$1-$2-$3');
	const parsedB = dateStrB.replace(/(\d{4}):(\d{2}):(\d{2})/, '$1-$2-$3');
	const dateA = new Date(parsedA);
	const dateB = new Date(parsedB);
	const timeA = dateA.getTime();
	const timeB = dateB.getTime();
	// Handle invalid dates
	if (isNaN(timeA)) return 1; // a is invalid, push to end
	if (isNaN(timeB)) return -1; // b is invalid, push to end
	return timeB - timeA; // newest first (descending)
});
---

<Layout title="Adrian Villanueva - Photography Portfolio" description="Tokyo-based photographer showcasing urban landscapes and natural beauty.">
  <Header currentPage="home" />

  <main class="main">
    <ProfileSection />

    <section class="gallery-section">
      <div class="gallery-header">
        <div class="gallery-tag">
          <span class="tag-line"></span>
          <span class="tag-text">Selected Works</span>
        </div>
        <span class="gallery-count">{sortedPhotos.length} photographs</span>
      </div>
      <div class="gallery-container">
        <div class="gallery-grid">
          {sortedPhotos.map(photo => (
            <PhotoCard
              id={uniqueIdFromImage(photo)}
              title={photo.title}
              image={photo.image}
              metadata={photo.metadata}
            />
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .gallery-section {
    padding: 0 0 4rem 0;
  }

  .gallery-header {
    padding: 0 2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--color-border);
  }

  .gallery-tag {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .tag-line {
    display: block;
    width: 40px;
    height: 1px;
    background: var(--color-primary);
  }

  .tag-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  .gallery-count {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    opacity: 0.5;
  }

  .gallery-container {
    width: 100%;
    overflow: hidden;
  }

  .gallery-grid {
    columns: 4;
    column-gap: 2rem;
    padding: 2rem;
    max-width: 1600px;
    margin: 0 auto;
  }

  @media (max-width: 1400px) {
    .gallery-grid {
      columns: 3;
      column-gap: 1.5rem;
    }
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      columns: 2;
      column-gap: 1.25rem;
    }
  }

  @media (max-width: 640px) {
    .gallery-grid {
      columns: 1;
      padding: 1.5rem 1rem;
    }
  }
    .gallery-header {
      padding: 0 0.75rem 1rem;
    }

    .tag-line {
      width: 24px;
    }

    .tag-text {
      font-size: 0.6rem;
    }

    .gallery-count {
      font-size: 0.6rem;
    }
  }
</style>
