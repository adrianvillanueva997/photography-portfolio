---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProfileSection from "../components/ProfileSection.astro";
import PhotoCard from "../components/PhotoCard.astro";
import yaml from "js-yaml";

interface Photo {
	id: string;
	title: string;
	image: string;
	thumbnail: string;
	metadata: {
		camera: string;
		lens: string;
		settings: {
			iso: number;
			aperture: string;
			shutter: string;
			focalLength: number | string;
		};
		location: string;
		dateTaken: string;
	};
}

interface Collection {
	collection: string;
	description: string;
	photos: Photo[];
}

// Load all YAML files
const collectionFiles = import.meta.glob("../data/collections/*.yaml", {
	query: "?raw",
	import: "default",
});
const allPhotos: Photo[] = [];

for (const [_path, getContent] of Object.entries(collectionFiles)) {
	const content = (await getContent()) as string;
	const data = yaml.load(content) as Collection;
	allPhotos.push(...data.photos);
}

// Shuffle photos
function shuffleArray<T>(array: T[]): T[] {
	const shuffled = [...array];
	for (let i = shuffled.length - 1; i > 0; i--) {
		const j = Math.floor(Math.random() * (i + 1));
		[shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
	}
	return shuffled;
}

const randomizedPhotos = shuffleArray(allPhotos);
---

<Layout title="Adrian Villanueva - Photography Portfolio" description="Tokyo-based photographer showcasing urban landscapes and natural beauty.">
  <Header currentPage="home" />

  <main class="main">
    <ProfileSection />

    <section class="gallery-section">
      <div class="gallery-header">
        <div class="gallery-tag">
          <span class="tag-line"></span>
          <span class="tag-text">Selected Works</span>
        </div>
        <span class="gallery-count">{randomizedPhotos.length} photographs</span>
      </div>
      <div class="gallery-container">
        <div class="gallery-grid">
          {randomizedPhotos.map(photo => (
            <PhotoCard
              id={photo.id}
              title={photo.title}
              image={photo.image}
              thumbnail={photo.thumbnail}
              metadata={photo.metadata}
            />
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 200px);
  }

  .gallery-section {
    padding: 0 0 4rem 0;
  }

  .gallery-header {
    padding: 0 2rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--color-border);
  }

  .gallery-tag {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .tag-line {
    display: block;
    width: 40px;
    height: 1px;
    background: var(--color-primary);
  }

  .tag-text {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    color: var(--color-primary);
  }

  .gallery-count {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    opacity: 0.5;
  }

  .gallery-container {
    width: 100%;
    overflow: hidden;
  }

  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    padding: 2rem 1rem;
  }

  @media (max-width: 1024px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
      padding: 1.25rem 1rem;
    }

    .gallery-header {
      padding: 0 1rem 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .gallery-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.5rem;
      padding: 1rem 0.75rem;
    }

    .gallery-header {
      padding: 0 0.75rem 1rem;
    }

    .tag-line {
      width: 24px;
    }

    .tag-text {
      font-size: 0.6rem;
    }

    .gallery-count {
      font-size: 0.6rem;
    }
  }
</style>
